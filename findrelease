function check_release()
{
Refine=1
SuSE=1
Gentoo=1
	if [ -f /etc/os-release ]
	then	
		# is Debian, Ubuntu Mint RHEL CentOS Fedora Rocky AlmaLinux Arch Alpine]
		Refine=0
	fi

	if [ -f /etc/SuSE-release ]
	then
		SuSE=0
	fi

	if [ -f /etc/gentoo-release ]
	then
		Gentoo=0
	fi
}

